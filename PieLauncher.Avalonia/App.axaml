<Application x:Class="PieLauncher.Avalonia.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:controls="clr-namespace:PieLauncher.Avalonia.Controls"
			 xmlns:icons="using:Material.Icons.Avalonia"
             RequestedThemeVariant="Dark">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="Controls/Styles.axaml"/>
		<StyleInclude Source="Controls/DragDropList.axaml"/>
        <icons:MaterialIconStyles />

	</Application.Styles>
    <Application.Resources>

		<system:Boolean x:Key="True" >True</system:Boolean>
		<system:Boolean x:Key="False" >False</system:Boolean>
		
        <Color x:Key="BaseGradient1">#2f3740</Color>
        <Color x:Key="BaseGradient2">#29323c</Color>
        <Color x:Key="BaseGradient3">#4a5766</Color>

        <Color x:Key="BaseTextColor">#fff</Color>
        <Color x:Key="DimTextColor">#aaa</Color>
        <Color x:Key="DisabledTextColor">#4a5766</Color>
        <Color x:Key="OverlayColor">#2000</Color>

        <Color x:Key="AccentGradient1">#85D8CE</Color>
        <Color x:Key="AccentGradient2">#085078</Color>

        <Color x:Key="SunriseGradient1">#EECDA3</Color>
        <Color x:Key="SunriseGradient2">#FF512F</Color>
        <Color x:Key="DuskGradient1">#F09D3A</Color>
        <Color x:Key="DuskGradient2">#FF754C</Color>
        <Color x:Key="NightGradient1">#2C5364</Color>
        <Color x:Key="NightGradient2">#0F2027</Color>

        <LinearGradientBrush x:Key="SunriseGradient">
            <GradientStop Offset="0" Color="{StaticResource SunriseGradient1}" />
            <GradientStop Offset="1" Color="{StaticResource SunriseGradient2}" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DayGradient">
            <GradientStop Offset="0" Color="{StaticResource AccentGradient1}" />
            <GradientStop Offset="1" Color="{StaticResource AccentGradient2}" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="DuskGradient">
            <GradientStop Offset="0" Color="{StaticResource DuskGradient1}" />
            <GradientStop Offset="1" Color="{StaticResource DuskGradient2}" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="NightGradient">
            <GradientStop Offset="0" Color="{StaticResource NightGradient1}" />
            <GradientStop Offset="1" Color="{StaticResource NightGradient2}" />
        </LinearGradientBrush>
        <GradientStops x:Key="LightGradientStops">
            <GradientStop Offset="0.5" Color="{DynamicResource BaseGradient3}" />
            <GradientStop Offset="1.0" Color="{DynamicResource BaseGradient1}" />
        </GradientStops>
        <GradientStops x:Key="DefaultGradientStops">
            <GradientStop Offset="0.5" Color="{DynamicResource BaseGradient1}" />
            <GradientStop Offset="1.0" Color="{DynamicResource BaseGradient2}" />
        </GradientStops>

		<LinearGradientBrush x:Key="MondayGradient">
            <GradientStop Offset="0" Color="#5c74e0" />
            <GradientStop Offset=".75" Color="#1C3190" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="TuesdayGradient">
            <GradientStop Offset="0" Color="#fce66a" />
            <GradientStop Offset="1" Color="#CBAF14" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="WednesdayGradient">
            <GradientStop Offset="0" Color="#73ceff" />
            <GradientStop Offset="1" Color="#2287BD" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="ThursdayGradient">
            <GradientStop Offset="0" Color="#ffb6c1" />
            <GradientStop Offset="1" Color="#DA465C" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="FridayGradient">
            <GradientStop Offset="0" Color="#ab73eb" />
            <GradientStop Offset="1" Color="#6214BA" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SaturdayGradient">
            <GradientStop Offset="0" Color="#fc4635" />
            <GradientStop Offset="1" Color="#BA1D0E" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SundayGradient">
            <GradientStop Offset="0" Color="#FFCB3E" />
            <GradientStop Offset="1" Color="#FF8800" />
        </LinearGradientBrush>

        <FontFamily x:Key="K2D">avares://PieLauncher.Avalonia/Assets/Fonts#K2D</FontFamily>

		<SolidColorBrush x:Key="DefaultTextBrush"
                         Color="{DynamicResource BaseTextColor}" />
        <SolidColorBrush x:Key="DimTextBrush"
                         Color="{DynamicResource DimTextColor}" />
        <SolidColorBrush x:Key="DisabledTextBrush"
                         Color="{DynamicResource DisabledTextColor}" />
        <SolidColorBrush x:Key="DefaultBorderBrush"
                         Color="{DynamicResource BaseGradient3}" />
        <SolidColorBrush x:Key="OverlayBrush"
                         Color="{DynamicResource Overlay}" />
        <RadialGradientBrush x:Key="BackgroundBrush" Center="0.5 0.5" GradientOrigin="-1 -1" GradientStops="{StaticResource DefaultGradientStops}" RadiusX="100%" RadiusY="100%"/>
        <RadialGradientBrush x:Key="LightBackgroundBrush" Center="0.5 0.5" GradientOrigin="-1 -1" GradientStops="{StaticResource LightGradientStops}" RadiusX="100%" RadiusY="100%" />
        <RadialGradientBrush x:Key="RingBackgroundBrush" GradientStops="{StaticResource DefaultGradientStops}" />

		<controls:DateTimeToBrush x:Key="TimeToBrush"
								  Day="{StaticResource DayGradient}"
								  Dusk="{StaticResource DuskGradient}"
								  Night="{StaticResource NightGradient}"
								  Morning="{StaticResource SunriseGradient}"/>
		<controls:DayOfTheWeekToBrush x:Key="DayToBrush"
								  Monday="{StaticResource MondayGradient}"
								  Tuesday="{StaticResource TuesdayGradient}"
								  Wednesday="{StaticResource WednesdayGradient}"
								  Thursday="{StaticResource ThursdayGradient}"
								  Friday="{StaticResource FridayGradient}"
								  Saturday="{StaticResource SaturdayGradient}"
								  Sunday="{StaticResource SundayGradient}"
									  />
		

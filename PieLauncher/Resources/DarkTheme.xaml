<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BaseGradient1" >#2f3740</Color>
    <Color x:Key="BaseGradient2" >#29323c</Color>
    <Color x:Key="BaseGradient3" >#4a5766</Color>

    <Color x:Key="BaseTextColor">#fff</Color>
    <Color x:Key="DimTextColor">#aaa</Color>
    <Color x:Key="DisabledTextColor">#4a5766</Color>
    <Color x:Key="OverlayColor">#2000</Color>

    <GradientStopCollection x:Key="DefaultGradientStops">
        <GradientStop Color="{StaticResource BaseGradient1}" Offset="0.5"/>
        <GradientStop Color="{StaticResource BaseGradient2}" Offset="1.0"/>
    </GradientStopCollection>

</ResourceDictionary>